{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.11",
    "@wessberg/rollup-plugin-ts": "^1.1.65",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lerna": "^3.18.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.19.0",
    "rollup": "^1.26.4",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.7.2"
  },
  "scripts": {
    "build": "ts-node scripts/build.ts",
    "prettier": "prettier --write --parser typescript '**/*.ts'",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "ts-node scripts/verify-commit.ts"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "npm run prettier",
      "git add"
    ]
  }
}
